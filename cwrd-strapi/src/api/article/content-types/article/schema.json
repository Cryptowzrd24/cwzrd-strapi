{
  "kind": "collectionType",
  "collectionName": "articles",
  "info": {
    "singularName": "article",
    "pluralName": "articles",
    "displayName": "Article"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string"
    },
    "coverImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "content": {
      "type": "richtext"
    },
    "summary": {
      "type": "text"
    },
    "categories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::category.category",
      "inversedBy": "articles"
    },
    "auther": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::auther.auther",
      "inversedBy": "articles"
    },
    "readTimeMinutes": {
      "type": "integer"
    },
    "views": {
      "type": "integer"
    },
    "isFeatured": {
      "type": "boolean",
      "default": false
    }
  }
}
